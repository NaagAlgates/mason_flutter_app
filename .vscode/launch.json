    "version": "0.2.0",
    "configurations": [

        {
            "name": "[DEV] test_app",
            "cwd": "test_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main_development.dart",
            "args": [
              "--flavor",
              "development",
              "--target",
              "lib/main_development.dart"
            ]
        },
        {
            "name": "[STG] test_app",
            "cwd": "test_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main_staging.dart",
            "args": ["--flavor", "staging", "--target", "lib/main_staging.dart"]
        },
        {
            "name": "[PROD] test_app",
            "cwd": "test_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main_production.dart",
            "args": ["--flavor", "production", "--target", "lib/main_production.dart"]
        }
    ]
}